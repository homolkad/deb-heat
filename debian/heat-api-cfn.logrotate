/var/log/heat/api-cfn.log {
    daily
    missingok
    compress
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service heat-api-cfn restart >/dev/null 2>&1 || true
        else
            invoke-rc.d heat-api-cfn restart >/dev/null 2>&1 || true
        fi
    endscript
}
